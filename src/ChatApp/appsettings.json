{
  "PathBase": "/chat",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost; User ID=ChatApp; Password=Password; Port=5432; Database=ChatApp; Pooling=true;"
  },
  "Authentication": {
    "Google": {
      "ClientId": "client_id",
      "ClientSecret": "client_secret",
      "AccessType": "offline"
    }
  },
  "Logging": {
    "PathFormat": "Logs/log-{Date}.txt",
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "Injection": {
    "Singleton": {
      "ChatApp.Services.IDateTimeService": "ChatApp.Services.DateTimeService",
      "ChatApp.Services.RoomwebSocket.IRoomWebSocketService": "ChatApp.Services.RoomwebSocket.RoomWebSocketService",
      "ChatApp.Services.RoomwebSocket.IRoomWSSender": "ChatApp.Services.RoomwebSocket.RoomWSSender"
    },
    "Transient": {
      "ChatApp.Services.IEmailSender": "ChatApp.Services.GMailSender",
      "ChatApp.Services.ISmsSender": "ChatApp.Services.AuthMessageSender",
      "ChatApp.Services.IControllerService": "ChatApp.Services.ControllerBaseService"
    }
  }
}
